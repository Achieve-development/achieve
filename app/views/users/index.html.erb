<% @users.each do |user| %>

<div class="row">
  <div class="col-xs-6 col-md-3">
    <div class="thumbnail">
      <div class='caption'>
          <h3><%= user.name %></h3>
　　      <p><%= image_tag user.image.thumb if user.image.present? %></p>
          <p><%= profile_img(user) if user.image.blank? %></p>
          <p><%= user.profile %></p>
          <p><%= link_to '詳細を見る', user_path(user.id), class:'btn btn-primary' %></p>
      </div>
    </div>
  </div>
</div>


<% end %>