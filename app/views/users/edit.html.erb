<%= form_for(@user) do |f| %>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: 'form-control', placeholder: "名前を入力して下さい。" %>
  </div>
  <div class="field">
    <%= f.label :profile %><br>
    <%= f.text_area :profile, class: 'form-control', placeholder: "プロフィールを入力して下さい。" %>
  </div>
  <div class="actions">
    <%= f.submit '変更する', class: 'btn btn-primary' %>
  </div>
<% end %>