<p id="notice"><%= notice %></p>

<%= link_to 'New Blog', new_blog_path %>

<% @blogs.each do |blog| %>
  <div class="panel panel-primary">
    <div class="panel-heading">
      <% if current_user.id == blog.user_id %>
        <h3 class="panel-title"><%= link_to "#{blog.title}", blog %></h3>
      <% else %>
        <h3 class="panel-title"><%= blog.title %></h3>
      <% end %>
      </div>
      <div class="panel-body">
        <% if blog.user.image.present? %>
　　      <p><%= image_tag blog.user.image.thumb %><p>
　      <% else %>
          <p><%= profile_img(blog.user) %><p>
        <% end %>
        <%= blog.content %><br/>
        <em><%= blog.created_at %></em>
        <p><em>投稿者: <%= blog.user.name %></em></p>
      <% if current_user.id == blog.user_id %>
        <%= link_to 'Edit', edit_blog_path(blog) %>
        <%= link_to 'Destroy', @blog, method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %>
    </div>
  </div>
<% end %>

