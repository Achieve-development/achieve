<div class='container'>
<p id="notice"><%= notice %></p>

<h1>ブログ</h1>

<table>
  <thead>
    <tr>
      <th>タイトル</th>
      <th>内容</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= blog.title %></td>
        <td><%= blog.content %></td>
        <td><%= link_to 'Show', blog, class: 'btn btn-primary' %></td>
        <td><%= link_to 'Edit', edit_blog_path(blog), class: 'btn btn-primary' %></td>
        <td><%= link_to 'Destroy', blog, class: 'btn',
                method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'ブログを投稿する', new_blog_path %>
</div>
