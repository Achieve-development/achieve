<div class='container'> 
<%= form_for @contact, :url => contact_confirm_path do |f| %>
     
    <div class='page-header'>
        <h1>お問い合わせ</h1>
    </div>
    
    <% if @contact.errors.any? %>
        <div class='alert alert-danger' role='alert'>
            <strong>入力内容にエラーがあります。</strong>
            <ul>
                <% @contact.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>
    
    
    <table class='table'>
        <tr>
            <th>名前<span class='text-danger'>（必須）</span></th>
            <td><%= f.text_field :name, class: 'form-control', placeholder: "名前を入力して下さい。" %></td>
        </tr>
        <tr>
            <th>メールアドレス<span class='text-danger'>（必須）</span></th>
            <td><%= f.text_field :email, class: 'form-control', placeholder: "メールアドレスを入力して下さい。" %></td>
        </tr>
        <tr>
            <th>お問い合わせ内容</th>
            <td><%= f.text_area :message, class: 'form-control', placeholder: "お問い合わせ内容を入力して下さい。" %></td>
        </tr>
    </table>
    <%= f.submit '確認', class: 'btn btn-primary' %>
    <%= link_to 'トップへ戻る', root_path %>
<% end %>
</div>